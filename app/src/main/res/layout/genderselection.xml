<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:background="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="Select Gender"
            android:textColor="#1565C0"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Calories &amp; stride calculation needs it."
            android:textColor="#7B7D80"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewfemale"
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:background="@drawable/imagecard">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/editfemale">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardviewmale"
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:background="@drawable/imagecard">

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="135dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/editmale11">

                </ImageView>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textviewfemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"
                android:textAlignment="center"
                android:textSize="25dp">

            </TextView>

            <TextView
                android:id="@+id/textviewmale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"
                android:textAlignment="center"
                android:textSize="25dp">

            </TextView>
        </LinearLayout>

        <Button
            android:id="@+id/nextbutton"
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:background="@drawable/buttonshape"
            android:text="NEXT"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold">

        </Button>

    </LinearLayout>

</FrameLayout>